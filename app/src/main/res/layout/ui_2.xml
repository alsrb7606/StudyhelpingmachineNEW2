<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/modeselect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="MODE SELECT"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/memorize_button"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:layout_marginTop="108dp"
        android:text="MEMORIZE"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeselect_button" />

    <Button
        android:id="@+id/understand_button"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:text="UNDERSTAND"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memorize_button" />

    <Button
        android:id="@+id/next_button2"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:layout_marginTop="80dp"
        android:text="NEXT"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/understand_button" />

</android.support.constraint.ConstraintLayout>